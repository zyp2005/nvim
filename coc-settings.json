{
  "list.source.explorerFiles.defaultOptions": ["--strict"],
  "git.addGBlameToVirtualText": true,
  //"git.enableGutters":true,
  //"git.addGBlameToBufferVar":true
  "git.signOffset": 2,
  "git.splitWindowCommand": "below vs",
  "git.showCommitInFloating": false,
  "git.enableGutters": true,
  "yank.enableCompletion": false,
  "suggest.maxPreviewWidth": 80,
  "suggest.labelMaxLength": 50,
  "suggest.detailMaxLength": 60,
  "suggest.enablePreview": true,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.detailField": "preview",
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.autoTrigger": "always",
  "suggest.numberSelect": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b",
    "constant": "\uf8fe",
    "default": "\uf29c",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "event": "\ufacd",
    "field": "\uf93d",
    "file": "\uf723",
    "folder": "\uf115",
    "function": "\u0192",
    "interface": "\uf417",
    "keyword": "\uf1de",
    "method": "\uf6a6",
    "module": "\uf40d",
    "operator": "\uf915",
    "property": "\ue624",
    "reference": "\ufa46",
    "snippet": "\ue60b",
    "struct": "\ufb44",
    "text": "\ue612",
    "typeParameter": "\uf728",
    "unit": "\uf475",
    "value": "\uf89f",
    "variable": "\ue71b"
  },
  "diagnostic.maxWindowWidth": 80,
  "diagnostic.displayByAle": false,
  //"diagnostic.virtualText": true,
  //"diagnostic.virtualTextPrefix": " ❯❯❯ ",
  "diagnostic.errorSign": "×",
  "diagnostic.warningSign": "»",
  "diagnostic.infoSign": "ღ",
  //"codeLens.enable": true,
  "coc.preferences.snippetStatusText": "Ⓢ ",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnType": true,
  "coc.preferences.previewAutoClose": true,
  "list.previewSplitRight": true,
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", ".root"],
  "todolist.monitor": true,
  "todolist.easyMode": true,
  "todolist.floatwin.winblend": 99,
  "todolist.autoUpload": true,
  "explorer.position": "left",
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.sources": [
    {
      "name": "bookmark",
      "expand": true
    },
    {
      "name": "buffer",
      "expand": true
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.keyMappings": {
    "i": false, // cancel default mapkey

    "gk": "expandablePrev",
    "gj": "expandableNext",

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "e": "open",
    "s": "open:split",
    "S": "open:split:plain",
    "E": "open:vsplit",
    "t": "open:tab",
    "<bs>": "gotoParent",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "<space>-": "diagnosticPrev",
    "<space>=": "diagnosticNext",

    "[g": "gitPrev",
    "]g": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  },
  "explorer.file.tabCD": true,
  "diagnostic-languageserver.filetypes": {
    "c": ["cppcheck"],
    "php": ["phpstan", "psalm"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "elixir": "mix_format",
    "eelixir": "mix_format"
  },
//"clangd.semanticHighlighting": true
"languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": { "lsRanges" : true }
              }
          }
  	}
}
