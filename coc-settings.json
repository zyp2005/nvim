{
  "git.addGBlameToVirtualText": true,
  //"git.addGBlameToBufferVar":true,
  "git.splitWindowCommand": "below vs",
  "git.addedSign.text": "┃",
  "git.changedSign.text": "┃",
  "git.removedSign.text": "┃",
  "git.changeRemovedSign.text": "┃",
  "git.showCommitInFloating": true,
  "git.enableGutters": true,
  "yank.enableCompletion": false,
  "suggest.triggerAfterInsertEnter": true,
  "snippets.autoTrigger": true,
  "suggest.maxPreviewWidth": 80,
  "suggest.labelMaxLength": 50,
  "suggest.detailMaxLength": 60,
  "suggest.enablePreview": true,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.detailField": "preview",
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.autoTrigger": "always",
  "suggest.numberSelect": true,
  "suggest.maxCompleteItemCount": 50,
  "Lua.workspace.preloadFileSize": 100,
  "git.topRemovedSign.text": "‾",
  "list.source.tags.command": "ctags -R .",
  "Lua.workspace.ignoreDir": [
      ".vscode"
  ],
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 1,
